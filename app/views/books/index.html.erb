<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show",book_path(book.id) %></td>
          <td><%= link_to "Edit",edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
        <% end %>
    </tbody>
  </thead>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
<div class="error-message">
 <h2 class="error-coment"> <%= @book.errors.count %>errors prohibited this book from being saved:</h2><br>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
       <li class="error-coment"><%= message %><br></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <label>Title</label>
  <div><%= f.text_field :title %></div>
</div>

<div class="field">
  <label>body</label>
  <div><%= f.text_area :body %></div>
</div>

<div><%= f.submit 'Create Book' %></div>
<% end %>